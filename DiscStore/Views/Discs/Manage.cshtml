@model IEnumerable<DiscStore.Models.Disc>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Artists.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genres.GenreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImgPath)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Artists.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genres.GenreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImgPath)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DiscID }) |
                @Html.ActionLink("Details", "Details", new { id = item.DiscID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DiscID })
            </td>
        </tr>
    }

</table>